@model ManagerSales.Web.GUI.Models.ManagerSalesModels.Product

@{
    ViewBag.Title = "Edit Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="//code.jquery.com/jquery-1.9.1.js"></script>
<script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js"></script>
<script src="~/Scripts/validate.config.js"></script>

@using (Html.BeginForm("EditProduct", "Product", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "product-form", @class = "form-horizontal", role = "form" }))
{
    <h2>Edit Product</h2>
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new {@class = "sr-only"})
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.Id, (IEnumerable<SelectListItem>) ViewBag.Customers, new {@id = "customer", @class = "form-control"})
            @Html.ValidationMessageFor(m => m.Name, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
}