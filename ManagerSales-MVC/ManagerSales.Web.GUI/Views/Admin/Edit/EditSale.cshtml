@model ManagerSales.Web.GUI.Models.ManagerSalesModels.ExSale

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("EditSale", "Admin", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {id = "login-form", @class = "form-horizontal", role = "form"}))
{
        <h2>Edit sale</h2>
        <div class="form-group">
            @Html.LabelFor(m => m.Customer.Name, new { @class = "sr-only" })
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.Customer.Id, (IEnumerable<SelectListItem>)ViewBag.Customers, new { @id = "customer", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Customer.Name, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Manager.LastName, new { @class = "sr-only" })
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.Manager.Id,(IEnumerable<SelectListItem>)ViewBag.Managers, new { @id = "manager", @class = "form-control"})
                @Html.ValidationMessageFor(m => m.Manager.LastName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Product.Name, new { @class = "sr-only" })
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.Product.Id, (IEnumerable<SelectListItem>)ViewBag.Products, new { @id = "manager", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Product.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Summ, new {@class = "sr-only"})
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Summ, new {@id = "login", @class = "form-control", @placeholder = "Login"})
                @Html.ValidationMessageFor(m => m.Summ, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Date, new { @class = "sr-only" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Date, new { @Value = Model.Date, @id = "datepicker", @class = "form-control", @placeholder = "Login" })
                @Html.ValidationMessageFor(m => m.Date, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<script src="~/Scripts/timepicker.js"></script>


<script>
    $(document).ready(function () {
        $("#datepicker").datetimepicker({
            timeFormat: 'HH:mm:ss'
        });
    });
</script>