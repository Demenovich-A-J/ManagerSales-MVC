@model ManagerSales.Web.GUI.Models.User

@{
    ViewBag.Title = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>Edit User</h2>
    
    @using (Html.BeginForm("UsersGrid", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <h2>Edit Product</h2>
        @Html.HiddenFor(m => m.Id, new { @class = "sr-only" })
        @Html.HiddenFor(m => m.SecurityStamp, new { @class = "sr-only" })
        @Html.HiddenFor(m => m.PasswordHash, new { @class = "sr-only" })

        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new {@class = "sr-only"})
            <div class="col-sm-10">
                @Html.EditorFor(m => m.UserName, new {@id = "UserName", @class = "form-control", @palceholder = "UserName"})
                @Html.ValidationMessageFor(m => m.UserName, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "sr-only" })
            <div class="col-sm-10">
                @Html.EditorFor(m => m.Email, new { @id = "Email", @class = "form-control", @palceholder = "Email", @type = "email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    }
    



