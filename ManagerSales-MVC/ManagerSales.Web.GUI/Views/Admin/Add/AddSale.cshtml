@model ManagerSales.Web.GUI.Models.ManagerSalesModels.ExSale

@{
    ViewBag.Title = "Add sale";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("AddProduct", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "login-form", @class = "form-horizontal", role = "form" }))
