@model ManagerSales.Web.GUI.Models.ManagerSalesModels.Sale

@{
    ViewBag.Title = "Add sale";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="//code.jquery.com/jquery-1.9.1.js"></script>
<script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js"></script>
<script src="~/Scripts/validate.config.js"></script>

@using (Html.BeginForm("AddSale", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "sale-form", @class = "form-horizontal", role = "form" }))
{
    <h2>Add sale</h2>
        <div class="form-group">
            @Html.LabelFor(m => m.Customer.Id, new { @class = "sr-only" })
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.Customer.Id, (IEnumerable<SelectListItem>)ViewBag.Customers, new { @id = "customer", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Customer.Id, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Manager.Id, new { @class = "sr-only" })
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.Manager.Id, (IEnumerable<SelectListItem>)ViewBag.Managers, new { @id = "manager", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Manager.Id, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Product.Id, new { @class = "sr-only" })
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.Product.Id, (IEnumerable<SelectListItem>)ViewBag.Products, new { @id = "manager", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Product.Id, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Summ, new { @class = "sr-only" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Summ, new { @id = "summ", @class = "form-control", @placeholder = "summ" })
                @Html.ValidationMessageFor(m => m.Summ, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Date, new { @class = "sr-only" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Date, new { @value = Model.Date, @class = "form-control", @placeholder = "Date", type = "date" })
                @Html.ValidationMessageFor(m => m.Date, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<script src="~/Scripts/timepicker.js"></script>

<script>
    $(document).ready(function () {
        $("#datepicker").datetimepicker({
            timeFormat: 'HH:mm:ss'
        });
    });
</script>