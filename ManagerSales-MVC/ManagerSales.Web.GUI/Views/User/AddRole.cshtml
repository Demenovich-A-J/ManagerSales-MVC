@model ManagerSales.Web.GUI.Models.Role

@{
    ViewBag.Title = "Add Role";
    Layout = "../Shared/_Layout.cshtml";
}

<h2>Add Role to @ViewBag.UserName</h2>

@using (Html.BeginForm("AddRole", "User", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {id = "sale-form", @class = "form-horizontal", role = "form"}))
{
    @Html.HiddenFor(m => m.UserId, null)

    <div class="form-group">
        @Html.LabelFor(m => m.Id, new { @class = "sr-only" })
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.Id, (IEnumerable<SelectListItem>)ViewBag.Roles, new { @id = "role", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Id, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Add</button>
        </div>
    </div>
}
